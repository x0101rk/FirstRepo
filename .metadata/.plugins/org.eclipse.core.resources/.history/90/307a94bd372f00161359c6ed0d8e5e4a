package logicBasic;

public class StartRepeat {

	public static void main(String[] args) {
		String star = "";
		int n = 5;
		for (int j = 0; j < n - 1; j++) {
			for (int i = 0; i < j; i++) {
				star = star + "*";
				System.out.println(star);
			}
		}
		while (n > 0) {
			System.out.println(starRepeater(n, "*"));
			--n;
		}

	}

	static String starRepeater(int n, String str) {
		if (n == 0) {
			return str;
		} else {
			return str + starRepeater(n - 1, str);
		}
	}
}
